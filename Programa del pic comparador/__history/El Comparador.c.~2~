#include <16f877a.h>
#fuses hs,nowdt
#use delay(clock=20M)

#define lcd_data_port getenv("sfr:portd")
#define lcd_enable_pin pin_d0
#define lcd_rs_pin pin_d1
#define lcd_rw_pin pin_d2
#define use_portb_kbd true
#include <lcd.c>
#include <kbd.c>
void main()
{
   char k;
   int x;
   port_b_pullups (true);
   lcd_init ();
   kbd_init ();
   printf (lcd_puct, "TUTORIAL Nº5");
   delay_ms(2000);
   printf(lcd_putc,"\f");
    
   
   while(true)
   {
   
      output_high(pin_b0);
      delay_ms(500);
      output_low(pin_b0);
      delay_ms(500);
   
   }
}
